<h1>Editing Book</h1>
<% if @book.errors.any? %>
	<div class="error">
		<div><%= @book.errors.count %>errors prohibited this book from being saved:</div>
			<ul>
  				<% @book.errors.full_messages.each do |message| %>
 					<li><%= message + 'error' %></li>
 				<% end %>
			</ul>
	</div>
<% end %>
<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_field :body %>

<%= f.submit 'Update Book' %>
 <% end %>
<h4><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></h4>