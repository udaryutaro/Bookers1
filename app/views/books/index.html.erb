<div class ="notice"><%= flash[:destroy] %></div>
<h1>books</h1>
<table>
<tr>
 <th>Title</th>
 <th>Body</th>
 <th></th>
 <th></th>
 <th></th>
</tr>
<tr>
<% @books.each do |book| %>
<tr>
  <td><%= book.title%></td>
  <td><%= book.body%></td>
  <td><%= link_to "Show", book_path(book.id)%></td>
  <td><%= link_to "Edit", edit_book_path(book.id)%></td>
  <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
 </tr>
<%end%>

</table>
<br>

<h1>New book</h1>
<% if @book.errors.any? %>
	<div class="error">
		<div><%= @book.errors.count %>errors prohibited this book from being saved:</div>
			<ul>
  				<% @book.errors.full_messages.each do |message| %>
 					<li><%= message + 'error' %></li>
 				<% end %>
			</ul>
	</div>
	<%= form_for(@book) do |f| %>
			<h4>Title</h4>
		<%= f.text_field :title %>

			<h4>Body</h4>
		<%= f.text_field :body %>

		<%= f.submit 'Create Book' %>
 	<% end %>
<%else%>
	<%= form_for(@book) do |f| %>
		<h4>Title</h4>
	<%= f.text_field :title %>

		<h4>Body</h4>
	<%= f.text_field :body %>

	<%= f.submit 'Create Book' %>
 	<% end %>
 <% end %>
